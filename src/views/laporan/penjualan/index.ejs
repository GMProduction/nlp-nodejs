<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Skripsi NLP</title>
    <%- include('../../components/head.ejs') %>
  </head>
  <body class="hold-transition sidebar-mini layout-fixed">
    <%- include('../../components/sidebar.ejs') %>
    <div class="content-wrapper p-3">
      <div class="d-flex align-items-center justify-content-between mb-3">
        <p class="font-weight-bold mb-0" style="font-size: 20px">Laporan Penjualan</p>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Laporan Penjualan</li>
          </ol>
        </nav>
      </div>
      <p class="font-weight-bold mb-0">Filter Tanggal</p>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center w-50">
                    <input type="date" class="form-control" name="tgl1" id="tgl1" value="<%= moment().format('YYYY-MM-DD');%>">
                    <span class="font-weight-bold mr-2 ml-2">S/D</span>
                    <input type="date" class="form-control" name="tgl2" id="tgl2" value="<%= moment().format('YYYY-MM-DD');%>">
                </div>
                <div class="text-right">
                    <a href="#" class="btn btn-primary" id="btn-cetak">
                        <i class="fa fa-print mr-2"></i>
                        <span>Cetak</span>
                    </a>
                </div>
            </div>
      <table id="table-data" class="display w-100 table table-bordered">
        <thead>
          <tr>
            <th width="5%" class="text-center">#</th>
            <th width="20%">No. Transaksi</th>
            <th>Nama Customer</th>
            <th width="12%" class="text-center">Total</th>
            <th width="12%" class="text-center">Status</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>

    <%- include('../../components/script.ejs') %>
    <script>
      var table;
      var status = "menunggu";

      function reload() {
        table.ajax.reload();
      }
      $(document).ready(function () {

        table = DataTableGenerator(
          "#table-data",
          "/laporan-penjualan/data",
          [
            {
              data: null,
              render: function (data, type, row, meta) {
                return meta["row"] + 1;
              },
            },
            { data: "no_transaksi" },
            { data: "user.member.nama" },
            { data: "total" },
            { data: "status" },
          ],
          [],
          function (d) {
            d.tgl1 = $('#tgl1').val();
                d.tgl2 = $('#tgl2').val();
          }
        );
        $('#tgl1').on('change', function (e) {
                reload();
            });
            $('#tgl2').on('change', function (e) {
                reload();
            });

            $('#btn-cetak').on('click', function (e) {
                e.preventDefault();
                let tgl1 = $('#tgl1').val();
                let tgl2 = $('#tgl2').val();
                window.open('/laporan-penjualan/cetak?tgl1=' + tgl1 + '&tgl2=' + tgl2, '_blank');
            })
      });
    </script>
  </body>
</html>
